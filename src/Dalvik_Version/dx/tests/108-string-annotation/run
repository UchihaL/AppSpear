$JAVAC -d . Blort.java Fizmo.java Frotz.java
dx --debug --dex --no-optimize --positions=none --no-locals \
    --dump-to=- *.class | cut -f 2 -d '|' | awk '

BEGIN {
    dumping = 0;
}

/annotation$/ {
    dumping = 1;
    printf("\n");
    next;
}

/^[ ]*$/ {
    dumping = 0;
    next;
}

dumping && /^  elements/ {
    print;
}

dumping && /^    name_idx/ {
    printf("    %s\n", $4);
}

dumping && /^    value/ {
    print;
}
'
